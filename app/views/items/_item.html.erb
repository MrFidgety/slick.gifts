<div id="item-<%= item.id %>" class="panel panel-default">
  <div class="panel-body">
    <span class="pull-right">
      <% if editable %>
      <%= link_to 'edit', edit_item_path(item),
                  remote: true %>
      <%= link_to 'delete', item_path(item), 
                  method: :delete,
                  remote: true %>
      <% else %>
        <%= link_to "purchase", [:new, item, :purchase],
                  remote: true %>
      <% end %>
    </span>
    <%= item.name %>
    (updated <%= local_time(item.updated_at) %>)
  </div>
</div>