<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Show Item</h4>
    </div>
    <div class="modal-body">
      <p>Name: <%= item.name %></p>
      <p>Comment: <%= item.comment %></p>
      <%= link_to icon("pencil-square-o"), 
              edit_item_path(item),
              remote: true %>
      <%= link_to icon("trash"), 
              item_path(item),
              method: :delete, remote: true, 
                data: {
                title: "Remove", 
                message: "This will remove the item completely. This action 
                cannot be undone.",
                confirm: "I want to remove this item" } %>
    </div>
  </div>
</div>