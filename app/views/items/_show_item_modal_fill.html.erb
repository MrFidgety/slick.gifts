<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <span class="pull-right">
        <button id="edit-item" class="btn btn-link">
          <%= icon("pencil-square-o") %>
          </button>
      </span>
      <h4 class="modal-title">Show Item</h4>
    </div>
    <div class="modal-body">
      <p>View access: <%= @want_view_access %></p>
      <div id="view-want-section">
        <p>Name: <%= item.name %></p>
        <p>Comment: <%= item.comment %></p>
      </div>
      <div id="edit-want-section">
        <%= form_for item, remote: true do |f| %>
          <div class="form-group">
          <%= f.text_field :name, placeholder: 'Name', 
                class: 'form-control input-lg' %>
          </div>
          <div class="form-group">
          <%= f.text_area :comment, placeholder: 'Comment',
                 class: 'form-control input-lg' %>
          </div>
          <span class="pull-right">
            <%= f.submit 'Update', 
              class: 'btn btn-success btn-lg', 
              data: {disable_with: 'Updating'} %>
          </span>
        <% end %>
        <%= link_to icon("trash"), 
              item_path(item),
              method: :delete, remote: true, 
              class: "btn btn-link btn-lg",
                data: {
                title: "Remove", 
                message: "This will remove the item completely. This action 
                cannot be undone.",
                confirm: "I want to remove this item" } %>
      </div>
    </div>
  </div>
</div>