<% submit_button ||= icon('plus', 'Add to my list') %>
<% submitting ||= "Adding" %>
<%= form_for item, remote: true do |f| %>
  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: 'Battlefield 1, Sunglasses, New phone ...', 
        class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= f.label :comment %>
  <%= f.text_area :comment, placeholder: 'PS4 version please, Anything Ray Ban thanks!, Pixel looks nice ... ',
         class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= f.label :link %>
  <%= f.text_field :link, placeholder: 'Have a link to the item? Pop it here', 
        class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= f.label :code %>
  <%= f.text_field :code, placeholder: 'Want something specific? Product code goes here', 
        class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= f.label :location %>
  <%= f.text_field :location, placeholder: 'Where did you see this item?', 
        class: 'form-control' %>
  </div>
  <%= button_tag(type: 'submit', 
        class: 'btn btn-link btn-block blue', 
        data: {disable_with: submitting) do
    submit_button
  end %>
<% end %>