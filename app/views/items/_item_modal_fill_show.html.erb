<h2><%= item.name %></h2>
<blockquote>
  <p>
    <%= item.comment %>
  </p>
</blockquote>
<ul class="want-details-list">
  <% if item.link %>
  <li>
    <span class="absolute">
      <%= icon("globe", "Link") %>
    </span>
    <div class="offset-small">
      <%= link_to "Here's the item online", item.link %>
    </div>
  </li>
  <% end %>
  <% if item.code %>
  <li>
    <span class="absolute">
      <%= icon("code", "Code") %>
    </span>
    <div class="offset-small">
      <%= item.code %>
    </div>
  </li>
  <% end %>
  <% if item.location %>
  <li>
    <span class="absolute">
      <%= icon("map-marker", "Location") %>
    </span>
    <div class="offset-small">
      <%= item.location %>
    </div>
  </li>
  <% end %>
</ul>