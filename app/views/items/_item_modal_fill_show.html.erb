<h2><%= item.name %></h2>
<blockquote>
  <p>
    <%= item.comment %>
  </p>
</blockquote>
<ul class="want-details-list">
  <% if item.link %>
  <li>
    <%= icon("globe") %>
    <div class="offset-small">
      <%= link_to "Here's the item online", item.link %>
    </div>
  </li>
  <% end %>
  <% if item.code %>
  <li>
    <%= icon("code") %>
    <div class="offset-small">
      <%= item.code %>
    </div>
  </li>
  <% end %>
  <% if item.location %>
  <li>
    <%= icon("map-marker") %>
    <div class="offset-small">
      <%= item.location %>
    </div>
  </li>
  <% end %>
</ul>