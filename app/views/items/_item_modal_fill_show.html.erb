<h2><%= item.name %></h2>
<% if item.comment.present? %>
<blockquote>
  <p>
    <%= item.comment %>
  </p>
</blockquote>
<% end %>
<ul class="want-details-list">
  <% if item.link.present? %>
  <li>
    <%= icon("globe") %>
    <div class="offset-small">
      <%= link_to "Here's the item online", item.link, target: "_blank" %>
    </div>
  </li>
  <% end %>
  <% if item.code.present? %>
  <li>
    <%= icon("code") %>
    <div class="offset-small">
      <%= item.code %>
    </div>
  </li>
  <% end %>
  <% if item.location.present? %>
  <li>
    <%= icon("map-marker") %>
    <div class="offset-small">
      <%= item.location %>
    </div>
  </li>
  <% end %>
</ul>