<h2><%= style.name %></h2>
<% if style.comment.present? %>
<blockquote>
  <p>
    <%= style.comment %>
  </p>
</blockquote>
<% end %>
<% if style.size.present? %>
<ul class="want-details-list">
  <li>
    <%= icon("sliders") %>
    <div class="offset-small">
      <%= style.size %>
    </div>
  </li>
</ul>
<% end %>