<% current_user_profile = @view_access == "edit" %>
<p>View access: <%= @view_access %></p>
<%= render @user, full_display: true %>
<% if current_user_profile %>
<div class="row">
  <button type="button" class="btn btn-default col-xs-4" 
          data-toggle="modal" data-target="#new-interest-modal"> 
    <%= icon("plus") %> Interest
  </button>
  <button type="button" class="btn btn-default col-xs-4" 
          data-toggle="modal" data-target="#new-item-modal">
    <%= icon("plus") %> Item
  </button>
  <button type="button" class="btn btn-default col-xs-4" 
          data-toggle="modal" data-target="#new-style-modal">
    <%= icon("plus") %> Style
  </button>
</div>
<% end %>
<% unless @view_access == "restricted" %>
<div id="want-container" class="panel-group">
  <% @wants.each do |want| %>
    <%= render want.wanted, editable: current_user_profile %>
  <% end %>
</div>
<% end %>
<% if current_user_profile %>
<%= render 'items/new' %>
<%= render 'interests/new' %>
<%= render 'styles/new' %>
<div  class="modal fade" 
      id="edit-modal" 
      tabindex="-1" 
      role="dialog" 
      aria-hidden="true">
</div>
<% end %>
<% if @view_access == "view" %>
<div  class="modal fade" 
      id="purchase-modal" 
      tabindex="-1" 
      role="dialog" 
      aria-hidden="true">
</div>
<div  class="modal fade" 
      id="purchases-modal" 
      tabindex="-1" 
      role="dialog" 
      aria-hidden="true">
</div>
<% end %>
<div  class="modal fade" 
      id="show-modal" 
      tabindex="-1" 
      role="dialog" 
      aria-hidden="true">
</div>