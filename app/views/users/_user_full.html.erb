<div class="panel-body">
  <%= image_tag(user.image, class: "img-large") %>
  <div class="user-info">
    <% if user == current_user %>
      <span class="pull-right">
        <%= link_to icon("cog"), settings_path, class: "settings-icon" %>
      </span>
    <% end %>
    <p class="name"><%= user.name %></p>
  </div>
</div>