<div class="modal fade" id="new-interest-modal" tabindex="-1" role="dialog" 
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">
          <span class="absolute">
            <%= icon("gamepad") %>
          </span>
          <span class="offset-small">
            Interest
          </span>
        </h4>
      </div>
      <div class="modal-body">
        <%= render 'interests/form', interest: @interest %>
      </div>
    </div>
  </div>
</div>