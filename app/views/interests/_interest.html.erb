<% editable ||= false %>
<% plain ||= false %>
<div id="interest-<%= interest.id %>" class="panel panel-default">
  <div class="panel-body">
    <span class="pull-right">
      <% if editable %>
      <%= link_to 'edit', edit_interest_path(interest),
                  remote: true %>
      | <%= link_to 'delete', interest_path(interest), 
                  method: :delete,
                  remote: true %>
      <% else %>
        <%= link_to "purchase", new_want_purchase_path(interest.want),
                  remote: true %>
        | <%= link_to "view purchases", want_purchases_path(interest.want),
                  remote: true %>
      <% end unless plain %>
    </span>
    INTEREST - <%= interest.name %>
    (updated <%= local_time(interest.updated_at) %>)
  </div>
</div>